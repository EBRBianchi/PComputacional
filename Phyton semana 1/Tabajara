preco = 0
opcao = 0
somaFinal = 0
dinheiro = 0
while opcao <= 1:
    print ("1- Passar produto")
    print ("0 - Sair")
    opcao = int(input("Digite sua opção:"))
    if opcao == 1:
        preco = float(input("Digite o preço do seu produto R$:"))
        somaFinal = somaFinal + preco
    elif opcao == 0:
        dinheiro = float(input("digite seu dinheiro:"))
        troco = dinheiro - somaFinal
        print ("Total a pagar R$:", somaFinal)
        print ("Seu troco", troco)
        print ("Volte sempre")
      
        print ("Opção inválida")
